{
  "name": "kawkah-parser",
  "version": "1.0.7",
  "description": "Simple CLI argument parser used by Kawkah.",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "docs": "node ./build docs",
    "build": "node ./build build",
    "bump": "node ./build bump",
    "test": "NODE_ENV=test node ./build test",
    "release": "node ./build release"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/blujedis/kawkah-parser.git"
  },
  "build": {
    "clean": [
      "./dist"
    ],
    "copy": []
  },
  "nyc": {
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx"
    ],
    "exclude": [
      "src/**/*.spec.ts"
    ],
    "extension": [
      ".ts",
      ".tsx"
    ],
    "require": [
      "./build/spec"
    ],
    "reporter": [
      "text",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "keywords": [
    "yargs",
    "commander",
    "parser",
    "minimist",
    "arguments",
    "cli"
  ],
  "author": "Blujedi <blujedicorp@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/blujedis/kawkah-parser/issues"
  },
  "homepage": "https://github.com/blujedis/kawkah-parser#readme",
  "devDependencies": {
    "@types/mocha": "^7.0.2",
    "@types/node": "^14.14.37",
    "@typescript-eslint/eslint-plugin": "^4.21.0",
    "@typescript-eslint/parser": "^4.21.0",
    "chai": "^4.3.4",
    "eslint": "^7.15.0",
    "mocha": "^8.3.2",
    "nyc": "^15.1.0",
    "stiks": "^1.1.6",
    "ts-node": "^9.1.1",
    "typedoc": "^0.20.35",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "chek": "^1.3.3",
    "escape-string-regexp": "^4.0.0"
  }
}
